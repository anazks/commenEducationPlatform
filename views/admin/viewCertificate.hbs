    <title>Document</title>
            <style>
                    .box{
                        width: 70%;
                        height: 400px;
                        background-color: white;
                        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                        margin: auto;
                        margin-top: 100px;
                    }
                    .form{
                         width: 70%;
                        height: 100px;
                        background-color: white;
                        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
                        margin: auto;
                        margin-top: 100px;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                    }
                    .images{
                        width: 90%;
                        margin: auto;
                        padding: 5px;
                        margin-top: 5px;
                        height: 100%;
                    }
                    .dwnlrd{
                        width: 100px;
                        height: 45px;
                        background-color: red;
                    }
            </style>
</head>
<body>
            <div class="form">
                    <input type="text" placeholder="Enter Register Number" id="regNo">
                     <button onclick="ViewCertificate()">Check</button>
            </div>
    <div class="box">
        <img id="certificateImage" src=""  class="images" alt="No certificate">

        <a href="" id="dwnlrd" class="btn btn outline danger">Downlrd
            
        </a>
    </div>
        <script>
                 function ViewCertificate() {
                    console.log("clicked")
                    let number = document.getElementById('regNo').value;
                    let imageElement = document.getElementById('certificateImage');

                    // Assuming the image is in the public/certificates/ directory
                    let imagePath = `/Certificate/${number}.jpg`; // You can adjust the file extension as needed

                    // Set the image source
                    imageElement.src = imagePath;
        }
        </script>
</body>
</html>